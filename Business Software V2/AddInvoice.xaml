<Page
    x:Class="Business_Software_V2.AddInvoice"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Business_Software_V2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddInvoice"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d" Background="#FFEAEAEA"
    >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Rectangle
            Width="494"
            Height="113"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            AllowDrop="True"
            Drop="ItemsDropped"
            Fill="AliceBlue" />
        <TextBlock
            x:Name="label"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            TextAlignment="Center"
            Text="Drop Invoices Here" IsHitTestVisible="False" Height="36" Width="332"/>

        <TextBlock
            x:Name="textBlock"
            Width="223"
            Height="329"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="TextBlock"
            Grid.Row="1"
            TextWrapping="Wrap" Background="#FFCFCFCF" Grid.Column="1" Grid.RowSpan="2"/>
        <ProgressBar x:Name="processingBar" HorizontalAlignment="Left" Height="26" Margin="254,40,0,0" VerticalAlignment="Top" Width="292" IsIndeterminate="True" Visibility="Collapsed"/>
        <Label x:Name="label1" Grid.Column="1" Content="Output" HorizontalAlignment="Left" VerticalAlignment="Center" Width="223"/>
        <TextBlock x:Name="label1_Copy" Text="Process Invoices" HorizontalAlignment="Left" TextAlignment="Center" VerticalAlignment="Center" Margin="50 0" FontSize="22"/>
    </Grid>
</Page>
