<Page
    x:Class="Business_Software_V2.AddInvoice"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Business_Software_V2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddInvoice"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d" Background="#FFEAEAEA"
    >

    <Grid>
        <Rectangle
            Width="494"
            Height="113"
            Margin="31,71,275,266"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            AllowDrop="True"
            Drop="ItemsDropped"
            Fill="AliceBlue" />
        <Label
            x:Name="label"
            
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="Drop Invoices Here" IsHitTestVisible="False" Height="36" Width="332" Margin="101,113,367,301" />

        <TextBlock
            x:Name="textBlock"
            Width="223"
            Height="329"
            Margin="546,71,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="TextBlock"
            TextWrapping="Wrap" Background="#FFCFCFCF" />
        <ProgressBar x:Name="processingBar" HorizontalAlignment="Left" Height="26" Margin="254,40,0,0" VerticalAlignment="Top" Width="292" IsIndeterminate="True" Visibility="Collapsed"/>
        <Label x:Name="label1" Content="Output" HorizontalAlignment="Left" Margin="546,22,0,0" VerticalAlignment="Top" Width="223"/>
        <Label x:Name="label1_Copy" Content="Process Invoices" HorizontalAlignment="Left" Margin="31,22,0,0" VerticalAlignment="Top" Width="494" FontSize="22"/>
    </Grid>
</Page>
