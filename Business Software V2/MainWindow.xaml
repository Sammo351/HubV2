<Window
    x:Class="Business_Software_V2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
    xmlns:local="clr-namespace:Business_Software_V2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    
    Visibility="Visible"
    mc:Ignorable="d" WindowState="Maximized">
    <Grid>

        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Invoices">
                    <MenuItem Header="Scan" Click="Menu_Scan" />
                    <MenuItem Header="List" Click="Menu_ListInvoices"/>
                    <Separator />
                    <MenuItem Header="_Exit" Click="Menu_Exit"/>
                </MenuItem>
            </Menu>
            <Frame x:Name="mainFrame" DockPanel.Dock="Bottom"/>


        </DockPanel>
    </Grid>
</Window>
